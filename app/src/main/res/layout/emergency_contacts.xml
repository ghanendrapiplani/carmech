<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsmall">
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="Police Control Room"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="100"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button" />
    <TextView
        android:layout_below="@+id/button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="Fire Control Room"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="101"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2" />
    <TextView
        android:layout_below="@+id/button2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="Ambulance Helpline"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button2"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="102"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button22" />
    <TextView
        android:layout_below="@+id/button22"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="Women's helpline"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button22"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="1091"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button222" />
    <TextView
        android:layout_below="@+id/button222"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="Senior Citizen "
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button222"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="1291"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2222" />
</RelativeLayout>
